In hidden.aspx.cs
using System;

namespace HiddenFieldDemo
{
    public partial class WebForm1 : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {

        }

        protected void Button1_Click(object sender, EventArgs e)
        {
            // Read value from HiddenField
            int count = int.Parse(HiddenField1.Value);

            // Increment count
            count += 1;

            // Display count in Label
            Label1.Text = "Count: " + count;

            // Store updated count back in HiddenField
            HiddenField1.Value = count.ToString();
        }
    }
}
