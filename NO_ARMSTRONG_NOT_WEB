        <asp:TextBox ID="txtNumber" runat="server"></asp:TextBox>
        <br /><br />
        <asp:Button ID="btnCheck" runat="server" Text="Check" OnClick="btnCheck_Click" />
        <br /><br />
        <asp:TextBox ID="txtResult" runat="server" ReadOnly="true" Width="250px"></asp:TextBox>
