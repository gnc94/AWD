In ArmStrong.aspx.cs
using System;
namespace ArmstrongWebApp{
 public partial class Armstrong : System.Web.UI.Page{
        protected void Page_Load(object sender, EventArgs e){
        }
        protected void btnCheck_Click(object sender, EventArgs e){
            int number, sum = 0;
            if (int.TryParse(txtNumber.Text, out number)){
                int temp = number;
                int digits = number.ToString().Length;
                while (temp > 0){
                    int rem = temp % 10;
                    sum += (int)Math.Pow(rem, digits);
                    temp /= 10;
                }
                if (sum == number)
                    txtResult.Text = number + " is an Armstrong Number";
                else
                    txtResult.Text = number + " is NOT an Armstrong Number";
            }
            else{
                txtResult.Text = "Please enter a valid number!";
            }
        }
    }
}
