    <form id="form1" runat="server">
        <asp:TextBox 
            ID="TextBox1" 
            runat="server" 
            Height="25" 
            AutoPostBack="True">
        </asp:TextBox>

        <asp:Button 
            ID="Button1" 
            runat="server" 
            Text="Click"
            ForeColor="White" 
            BackColor="DarkSlateGray"
            OnClick="Button1_Click" 
            Height="30" 
            Width="50" 
            BorderStyle="Groove" />

        <br />

        <asp:Label 
            ID="Label1" 
            runat="server" 
            ForeColor="Green">
        </asp:Label>
    </form>
