using System;
public class WeekDay
{
    public static void Main(string[] args)
    {
        Console.WriteLine("Enter day number (1 to 7):");
        int day = int.Parse(Console.ReadLine());
        string dayName;
        switch (day)
        {
            case 1:
                dayName = "Monday";
                break;
            case 2:
                dayName = "Tuesday";
                break;
            case 3:
                dayName = "Wednesday";
                break;
            case 4:
                dayName = "Thursday";
                break;
            case 5:
                dayName = "Friday";
                break;
            case 6:
                dayName = "Saturday";
                break;
            case 7:
                dayName = "Sunday";
                break;
            default:
                dayName = "Invalid day number!";
                break;
        }
        Console.WriteLine($"Day {day} is {dayName}");
    }
}
